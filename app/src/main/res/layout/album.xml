<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absolute="16dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Text"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            tools:layout_editor_absolute="21dp" />

        <TextView
            android:id="@+id/tvartistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"
            tools:layout_editor_absolute="21dp" />

        <TextView
            android:id="@+id/tvCollectionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/tvartistName"
            tools:layout_editor_absolute="21dp" />

        <TextView
            android:id="@+id/tvreleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/tvCollectionname"
            tools:layout_editor_absolute="21dp" />

        <TextView
            android:id="@+id/tvCollectionPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Text"
            android:textColor="@color/colorGreen"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/tvreleaseDate"
            tools:layout_editor_absolute="21dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>